<?xml version="1.0" encoding="UTF-8"?>
<component type="addon">
  <id>io.elementary.switchboard.display</id>
  <extends>io.elementary.switchboard</extends>
  <name>Display Settings</name>
  <summary>Configure resolution and position of monitors and projectors</summary>
  <icon type="stock">preferences-desktop-display</icon>
  <translation type="gettext">display-plug</translation>
  <releases>
    <release version="2.3.2" date="2021-10-22" urgency="medium">
      <description>
        <p>Fixes:</p>
        <ul>
          <li>Show display name on all workspaces</li>
          <li>Move resolutions with a different aspect ratio to a submenu</li>
          <li>Improve brightness in the dark style</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="2.3.1" date="2021-08-20" urgency="medium">
      <description>
        <p>Fixes:</p>
        <ul>
          <li>Ensure the "Use this display" switch works in more circumstances</li>
        </ul>
        <p>Minor updates:</p>
        <ul>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="2.3.0" date="2021-07-14" urgency="medium">
      <description>
